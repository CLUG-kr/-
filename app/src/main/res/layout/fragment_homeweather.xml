<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_homeweather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_homeweather_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="쌀쌀한 날"
            android:textSize="28dp" />

        <LinearLayout
            android:id="@+id/layout_homeweather_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_homeweather_weather_icon"
                android:layout_width="100dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/boundary1"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#000000"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_homeweather_now_tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="현재온도" />

                <TextView
                    android:id="@+id/tv_homeweather_now_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10ºC"
                    android:textSize="24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/boundary2"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#000000"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_homeweather_mm_tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text=" 최고/최저온도" />

                <TextView
                    android:id="@+id/tv_homeweather_mm_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/3ºC"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_homeweather_closet"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_homeweather_people"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/img_homeweather_1"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/img_homeweather_2"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/img_homeweather_3"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/img_homeweather_4"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/img_homeweather_5"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/img_homeweather_6"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/img_homeweather_l1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp" />

            <ImageView
                android:id="@+id/img_homeweather_l2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/img_homeweather_l1"
                android:layout_marginLeft="40dp" />

            <ImageView
                android:id="@+id/img_homeweather_l3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/img_homeweather_l2"
                android:layout_marginLeft="40dp" />

            <ImageView
                android:id="@+id/img_homeweather_r1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp" />

            <ImageView
                android:id="@+id/img_homeweather_r2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/img_homeweather_r1"
                android:layout_alignRight="@id/img_homeweather_r1"
                />

            <ImageView
                android:id="@+id/img_homeweather_r3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/img_homeweather_r2"
                android:layout_alignRight="@id/img_homeweather_r1" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_homeweather_info"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            android:background="@drawable/backbox"
            android:gravity="center"
            android:padding="16dp"
            android:text="오늘은 일교차가 매우 큽니다.\n얇은 가디건을 가지고 다니시는 것을 권합니다.\n그렇지만 미세먼지 양은 적어서,\n외부활동하기 좋을 것으로 예상이 됩니다." />

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>